<p id="notice"><%= notice %></p>

<p>
  <strong><%= @user.username %></strong>
</p>

<p>favourite beer style: <%= @user.favorite_style %></p>
<p>favourite brewery: <%= @user.favorite_brewery %></p>
<p>has made <%= @user.ratings.count %> ratings</p>
<p>with average of <%= @user.average_rating %></p>

<% if not @user.ratings.empty? %>
	<p>
		<strong>ratings</strong>
	</p>
	
	<ul>
    <% @user.ratings.each do |rating| %>
      <li> 
        <%= rating %> 
        <% if @user == current_user %>
            <%= link_to 'delete', rating, method: :delete, data: { confirm: 'Are you sure?' } %> 
        <% end %>
      </li>
    <% end %>
  </ul>
<% end %>

<% if not @user.beer_clubs.empty? %>
	<p><strong>Olutseurat</strong></p>
		<% @user.beer_clubs.each do |bc| %>
			<p><%= bc.name %></p>
		<% end %>
<% end %>

<% if @user == current_user %>
	<%= link_to 'Destroy', @user, method: :delete, data: { confirm: 'Are you sure?' } %> |
	<%= link_to 'Edit', edit_user_path(@user) %> |
<% end %>

<%= link_to 'Back', users_path %>
