<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @beer.name %>
</p>

<p>
  <strong>Style:</strong>
  <%= @beer.style %>
</p>

<p>
  <strong>Brewery:</strong>
  <%= @beer.brewery.name %>
</p>

<% if @beer.ratings.empty? %>
 <p>
 	beer has not yet been rated!
 </p>
<% else %>
 <p>
 	beer has 
 	<%= @beer.ratings.count %>
 	ratings, average

 	<% @total = 0%>
 	<% @beer.ratings.each do |r| %>
 		<% @total += r.score %>
 	<% end %>

 	<% @total /= @beer.ratings.count %>
 	<%= @total %>
 </p>
<% end %>

<%= link_to 'Edit', edit_beer_path(@beer) %> |
<%= link_to 'Back', beers_path %>
